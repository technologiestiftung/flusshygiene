{
  "ignore": [
    "**/*.test.ts",
    "**/*.spec.ts",
    ".git",
    "node_modules/**/node_modules"
  ],
  "watch": ["./src"],
  "exec": "./node_modules/.bin/tsc -p . && node --max-old-space-size=4096 -r dotenv/config --inspect=127.0.0.1:9231 dist/index.js",
  "ext": "ts,json",
  "restartable": "rs",
  "verbose": true,
  "env": {
    "NODE_ENV": "development",
    "NODE_DOCKER_ENV": "0"
  }
}
