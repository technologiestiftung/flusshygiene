{
  "ignore": [
    "**/*.test.ts",
    "**/*.spec.ts",
    ".git",
    "node_modules/**/node_modules",
    "**/__tests__",
    "**/__mocks__",
    "dist/**/*.d.ts"
  ],
  "watch": ["./dist"],
  "exec": "node -r dotenv/config --inspect dist/index.js",
  "ext": "ts,json",
  "restartable": "rs",
  "verbose": true,
  "env": {
    "NODE_ENV": "development",
    "NODE_DOCKER_ENV": "0"
  }
}
