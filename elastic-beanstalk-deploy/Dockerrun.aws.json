{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "api",
      "image": "technologiestiftung/flusshygiene-postgres-api:v2.1.0-dev",
      "hostname": "api",
      "essential": false,
      "memory": 3072,
      "mountPoints": [
        {
          "sourceVolume": "awseb-logs-api",
          "containerPath": "/var/log/api"
        }
      ]
    },
    {
      "name": "ocpu",
      "image": "technologiestiftung/flusshygiene-opencpu-fhpredict-api:test-dev-branch-",
      "hostname": "ocpu",
      "essential": false,
      "memory": 2048,
      "mountPoints": [
        {
          "sourceVolume": "awseb-logs-ocpu",
          "containerPath": "/var/log/ocpu"
        }
      ]
    },
    {
      "name": "spa",
      "image": "technologiestiftung/flusshygiene-cms-spa:v2.1.0-dev",
      "hostname": "spa",
      "essential": false,
      "memory": 512,
      "mountPoints": [
        {
          "sourceVolume": "awseb-logs-spa",
          "containerPath": "/var/log/spa"
        }
      ]
    },

    {
      "name": "middlelayer",
      "image": "technologiestiftung/flusshygiene-opencpu-middlelayer:test-sleep-dev",
      "hostname": "middlelayer",
      "essential": false,
      "memory": 256,
      "mountPoints": [
        {
          "sourceVolume": "awseb-logs-middlelayer",
          "containerPath": "/var/log/middlelayer"
        }
      ],
      "links":["ocpu:ocpu","spa:spa"]
    },
    {
      "name": "nginx",
      "image": "technologiestiftung/flusshygiene-nginx-gateway:basic-auth-ocpu-dev",
      "hostname": "nginx",
      "essential": true,
      "memory": 512,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        },
        {
          "hostPort": 443,
          "containerPort": 80
        }
      ],
      "links": ["api:api", "spa:spa","ocpu:ocpu", "middlelayer:middlelayer"]
    }
  ]
}
