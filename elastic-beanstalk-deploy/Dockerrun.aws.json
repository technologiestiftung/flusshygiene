{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "api",
      "image": "technologiestiftung/flusshygiene-postgres-api:v2.0.0-dev",
      "hostname": "api",
      "essential": false,
      "memory": 8192,
      "mountPoints": [
        {
          "sourceVolume": "awseb-logs-api",
          "containerPath": "/var/log/api"
        }
      ]
    },
    {
      "name": "ocpu",
      "image": "technologiestiftung/flusshygiene-opencpu-fhpredict-api:v2.0.0-dev",
      "hostname": "ocpu",
      "essential": false,
      "memory": 4096,
      "mountPoints": [
        {
          "sourceVolume": "awseb-logs-ocpu",
          "containerPath": "/var/log/ocpu"
        }
      ]
    },
    {
      "name": "spa",
      "image": "technologiestiftung/flusshygiene-cms-spa:test-dev",
      "hostname": "spa",
      "essential": false,
      "memory": 1024,
      "mountPoints": [
        {
          "sourceVolume": "awseb-logs-spa",
          "containerPath": "/var/log/spa"
        }
      ]
    },
    {
      "name": "middlelayer",
      "image": "technologiestiftung/flusshygiene-opencpu-middlelayer:v2.0.0-dev",
      "hostname": "middlelayer",
      "essential": false,
      "memory": 512,
      "mountPoints": [
        {
          "sourceVolume": "awseb-logs-middlelayer",
          "containerPath": "/var/log/middlelayer"
        }
      ]
    },
    {
      "name": "nginx",
      "image": "technologiestiftung/flusshygiene-nginx-gateway:v2.0.0-dev",
      "hostname": "nginx",
      "essential": true,
      "memory": 1024,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        },
        {
          "hostPort": 443,
          "containerPort": 80
        }
      ],
      "links": ["api:api", "spa:spa", "ocpu:ocpu", "middlelayer:middlelayer"]
    }
  ]
}
