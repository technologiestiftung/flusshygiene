{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "api",
      "image": "technologiestiftung/flusshygiene-postgres-api:v2.7.5-dev",
      "hostname": "api",
      "essential": false,
      "memory": 3072,
      "mountPoints": [
        {
          "sourceVolume": "awseb-logs-api",
          "containerPath": "/var/log/api"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "flsshygn",
          "awslogs-region": "eu-central-1",
          "awslogs-stream-prefix": "api"
        }
      },
      "environment": [
        {
          "name": "ECS_AVAILABLE_LOGGING_DRIVERS",
          "value": "'[\"json-file\",\"awslogs\"]'"
        }
      ]
    },
    {
      "name": "ocpu",
      "image": "technologiestiftung/flusshygiene-opencpu-fhpredict-api:v2.7.5-dev",
      "hostname": "ocpu",
      "essential": false,
      "memory": 2048,
      "mountPoints": [
        {
          "sourceVolume": "awseb-logs-ocpu",
          "containerPath": "/var/log/ocpu"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "flsshygn",
          "awslogs-region": "eu-central-1",
          "awslogs-stream-prefix": "ocpu"
        }
      },
      "environment": [
        {
          "name": "ECS_AVAILABLE_LOGGING_DRIVERS",
          "value": "'[\"json-file\",\"awslogs\"]'"
        }
      ]
    },
    {
      "name": "spa",
      "image": "technologiestiftung/flusshygiene-cms-spa:v2.7.5-dev",
      "hostname": "spa",
      "essential": false,
      "memory": 512,
      "mountPoints": [
        {
          "sourceVolume": "awseb-logs-spa",
          "containerPath": "/var/log/spa"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "flsshygn",
          "awslogs-region": "eu-central-1",
          "awslogs-stream-prefix": "spa"
        }
      },
      "environment": [
        {
          "name": "ECS_AVAILABLE_LOGGING_DRIVERS",
          "value": "'[\"json-file\",\"awslogs\"]'"
        }
      ]
    },

    {
      "name": "middlelayer",
      "image": "technologiestiftung/flusshygiene-opencpu-middlelayer:v2.7.5-fix-dev",
      "hostname": "middlelayer",
      "essential": false,
      "memory": 256,
      "mountPoints": [
        {
          "sourceVolume": "awseb-logs-middlelayer",
          "containerPath": "/var/log/middlelayer"
        }
      ],
      "links": ["ocpu:ocpu", "spa:spa"],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "flsshygn",
          "awslogs-region": "eu-central-1",
          "awslogs-stream-prefix": "middlelayer"
        }
      },
      "environment": [
        {
          "name": "ECS_AVAILABLE_LOGGING_DRIVERS",
          "value": "'[\"json-file\",\"awslogs\"]'"
        }
      ]
    },
    {
      "name": "nginx",
      "image": "technologiestiftung/flusshygiene-nginx-gateway:v2.7.5-dev",
      "hostname": "nginx",
      "essential": true,
      "memory": 512,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        },
        {
          "hostPort": 443,
          "containerPort": 80
        }
      ],
      "links": ["api:api", "spa:spa", "ocpu:ocpu", "middlelayer:middlelayer"],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "flsshygn",
          "awslogs-region": "eu-central-1",
          "awslogs-stream-prefix": "nginx"
        }
      },
      "environment": [
        {
          "name": "ECS_AVAILABLE_LOGGING_DRIVERS",
          "value": "'[\"json-file\",\"awslogs\"]'"
        }
      ]
    }
  ]
}
